<div id="login-form">
<%= form_tag 'process_login' do %>
    <table>
    <tbody>
    <tr>
        <td align="right"><label for="mail">Mail:</label></td>
        <td align="left"><input type="text" tabindex="1" name="email" id="email"></td>
    </tr>
    <tr>
        <td align="right"><label for="password">Password:</label></td>
        <td align="left"><input type="password" tabindex="2" name="password" id="password"></td>
    </tr>
    <tr>
    	<td align="right"><label for="rememberme"><input type="checkbox" name="remember_me"></label></td>
        <td align="left">
            Rememberme
        </td>
    </tr>
    
    <tr>
    	<td></td>
        <td align="right">
            <%= submit_tag 'Login', :class => 'btn' %>
            <%= link_to 'Register', {:controller=>"users", :action => "new"}, :class => "btn" %>
        </td>
    </tr>
    </tbody>
    </table>
<% end %>
</div>